<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <h4>Employee's profile:</h4>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="image">
            <div class="row">
              <div class="col-md-12">
                <%= image_tag @user.image, size: "150x150" %>
              </div>
            </div>
          </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="fullname">
            <div class="row">
              <div class="col-md-3">
                <label>Fullname:</label>
              </div>
              <div class="col-md-9">
                <%= @user.first_name %>
                <%= @user.last_name %>
              </div>
            </div>
          </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="email">
            <div class="row">
              <div class="col-md-3">
                <label>Email:</label>
              </div>
              <div class="col-md-9">
                <%= @user.email %>
              </div>
            </div>
          </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="position">
            <div class="row">
              <div class="col-md-3">
                <label>Position:</label>
              </div>
              <div class="col-md-9">
                <%= @user.role %>
              </div>
            </div>
          </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="age">
            <div class="row">
              <div class="col-md-3">
                <label>Age:</label>
              </div>
              <div class="col-md-9">
                <%= @user.age %>
              </div>
            </div>
          </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="birthdate">
            <div class="row">
              <div class="col-md-3">
                <label>Birthdate:</label>
              </div>
              <div class="col-md-9">
                <%= @user.birthdate.to_s(:long) %>
              </div>
            </div>
          </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to 'Back', human_resources_path %>
        </li>
      </ul>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
