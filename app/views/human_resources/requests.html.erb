<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>Requests:</h3>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Employee email</th>
            <th>Date request</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% if @requests.blank? %>
            <tr>
              <td colspan="3" align="center">No request found!</td>
            </tr>
          <% else %>
          <% @requests.each do |t| %>
          <tr>
            <td><%= t.user.email %></td>
            <td><%= t.updated_at.to_date %></td>
            <td><%= select_tag 'status_type', options_for_select(Request.statuses.map {|k, v| [k.humanize.capitalize, v]}),
             class: "form-control", style: "width: 120px;", data: { select: "status",
              url: requests_update_status_human_resource_path(t) } %></td>
          </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Back', human_resources_path %>
    </div>
  </div>
</div>
