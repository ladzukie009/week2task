<div class="container">
  <div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
      <%= form_with model: @user, url: employee_path, html: { multipart: true } do |t| %>

        <div class="form-group">
          <%= t.label :image, class: "control-label" %>
          <%= t.file_field :image %>
        </div>

        <div class="form-group">
          <%= t.label :first_name, class: "control-label" %>
          <%= t.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= t.label :last_name, class: "control-label" %>
          <%= t.text_field :last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= t.label :age, class: "control-label" %>
          <%= t.text_field :age, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= t.label :birthdate, class: "control-label" %>
          <%= t.date_field :birthdate, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= t.label :email, class: "control-label" %><br />
          <%= t.email_field :email, autofocus: true, autofocus: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= t.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= t.password_field :password, autocomplete: "off", class: "form-control" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="form-group">
          <%= t.label :password_confirmation %><br />
          <%= t.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="controls">
          <%= t.submit "Update Information", class: "btn btn-block btn-primary" %>
        </div>

      <% end %>
      <br />
      <%= link_to 'Back', employees_path %>
    </div>

    <div class="col-md-3"></div>
  </div>
</div>
